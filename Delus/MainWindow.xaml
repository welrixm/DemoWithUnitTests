<Window x:Class="Delus.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Delus"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>

            <RowDefinition Height="43*"/>
            <RowDefinition Height="355*"/>
            <RowDefinition Height="42*"/>

        </Grid.RowDefinitions>
        <Rectangle Fill="#43DCFE"></Rectangle>
        <Image HorizontalAlignment="Left"   Source="/Resources/Попрыженок.png"></Image>
        <TextBlock x:Name="TitlePage" Style= "{StaticResource MyStyle}" FontSize="25">Производство попрыгунчиков></TextBlock>
        <Button x:Name="BackBtn" Style= "{StaticResource MyButton}" HorizontalAlignment="Right" Margin="100 0" Click="BackBtn_Click">Назад
        </Button>
        <Button x:Name="ExitBtn" Style= "{StaticResource NewMyButton}" HorizontalAlignment="Right" Margin="10 0" Click="ExitBtn_Click" >Выход</Button>
        <Rectangle Grid.Row="2" Fill="#43DCFE"></Rectangle>
        <Frame Grid.Row="1" x:Name="MyFrame" NavigationUIVisibility="Hidden"></Frame>


    </Grid>
</Window>
